apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: {{ tls_cluster_issuer_name }}
spec:
  acme:
    email: {{ tls_acme_email }}
    server: {{ tls_acme_server_staging if tls_acme_use_staging else tls_acme_server_production }}
    privateKeySecretRef:
      name: prairie-acme-account-key
    solvers:
      - http01:
          ingress:
            class: traefik
